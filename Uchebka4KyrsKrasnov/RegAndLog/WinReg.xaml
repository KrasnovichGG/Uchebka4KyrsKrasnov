<Window
    x:Class="Uchebka4KyrsKrasnov.RegAndLog.WinReg"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Uchebka4KyrsKrasnov.RegAndLog"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Регистрация"
    Width="1100"
    Height="630"
    FontFamily="Comic Sans MS"
    FontSize="15"
    Icon="/Images/Icons.png"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="605*" />
            <RowDefinition Height="9*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="427*" />
            <ColumnDefinition Width="634*" />
            <ColumnDefinition Width="39*" />
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/RegImage.png" />
        </Grid.Background>
        <Label
            x:Name="Lbreg"
            Grid.Column="1"
            Width="236"
            Height="63"
            Margin="219,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Регистрация"
            FontSize="36" />
        <TextBox
            x:Name="TxtbRegName"
            Grid.Column="1"
            Width="260"
            Height="48"
            Margin="325,135,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="#F2EBE9"
            BorderBrush="Red"
            BorderThickness="2,2,2,2.3"
            Cursor="Pen"
            MaxLength="25"
            TextWrapping="Wrap"
            ToolTip="Максимальное значение ввода символов 25!" />
        <TextBox
            x:Name="TxtbRegPhone"
            Grid.Column="1"
            Width="260"
            Height="48"
            Margin="325,240,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="#F2EBE9"
            BorderBrush="Blue"
            BorderThickness="2,2,2,2.3"
            Cursor="Pen"
            MaxLength="11"
            TextWrapping="Wrap"
            ToolTip="Номер телефона не более 11 символов!" />
        <TextBox
            x:Name="TxtBCommentUser"
            Grid.Column="1"
            Width="260"
            Height="102"
            Margin="325,351,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="#F2EBE9"
            BorderBrush="Green"
            BorderThickness="2,2,2,2.3"
            Cursor="Pen"
            TextWrapping="Wrap" />
        <Label
            x:Name="lbName"
            Grid.Column="1"
            Width="80"
            Height="31"
            Margin="415,104,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Ваше имя" />
        <Label
            x:Name="LbPhone"
            Grid.Column="1"
            Width="106"
            Height="31"
            Margin="402,209,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Ваш телефон" />
        <Label
            x:Name="LbCommentUser"
            Grid.Column="1"
            Width="138"
            Height="31"
            Margin="386,320,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Напишите о себе!" />
        <Border
            Grid.Column="1"
            Width="230"
            Height="229"
            Margin="31,135,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            BorderBrush="Black"
            BorderThickness="2">
            <Image x:Name="Image_USER" />
        </Border>
        <Label
            x:Name="lbImageUser"
            Grid.Column="1"
            Width="98"
            Height="31"
            Margin="97,104,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Фотография" />
        <Button
            x:Name="BtnAddImageToWin"
            Grid.Column="1"
            Width="126"
            Height="40"
            Margin="83,382,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#F2EBE9"
            BorderBrush="Black"
            BorderThickness="2"
            Content="Добавить фото" />
        <Button
            x:Name="BtnSaveDB"
            Grid.Column="1"
            Width="199"
            Height="44"
            Margin="237,531,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#F2EBE9"
            BorderBrush="Red"
            BorderThickness="2"
            Content="Зарегистрироваться" />
        <Button
            x:Name="Btnback"
            Grid.Column="1"
            Width="60"
            Height="35"
            Margin="546,542,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#F2EBE9"
            BorderBrush="Green"
            BorderThickness="2"
            Content="Назад" Click="Btnback_Click" />
    </Grid>
</Window>
